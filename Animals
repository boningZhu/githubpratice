<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>animals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
<div class="container mt-5">
    <h1>Update animals</h1>
    <form onsubmit="handleFormSubmit(event)">
        <h1>animals form</h1>
        <div class="mb-3">
            <label for="name"  class="form-label">name</label>
            <input
                    type="text"
                    class="form-control"
                    name="animals"
                    id="name"
            >
        </div>
        <div class="mb-3">
            <label for="age"  class="from-label">age</label>
            <input
                   type="text"
                   class="from-control"
                   name="animals"
                   id="age"
            >
        </div>
        <div class="mb-3">
            <label for="number"  class="from-label">number</label>
            <input
                    type="text"
                    class="from-control"
                    name="animals"
                    id="number"
            >
        </div>
        <div class="mb-3">

            <button type="submit" class="btn btn-primary animals">Submit</button>
        </div>
    </form>
</div>
<script>
    var nameElm = document.getElementById("name")
    var ageElm = document.getElementById("age")
    var numberElm = document.getElementById("number")
    var id = window.location.search.replace("?id=","")

    document.addEventListener("DOMContentLoaded", function(){
        fetch(`http://localhost:5000/api/v1/animals/${id}`, {
            method: "GET"
        }).then(response => response.json()).then(response => {
            console.log(response)
            nameElm.value = response.result.name
            ageElm.value = response.result.age
            numberElm.value = response.result.number

        })
    });


    function handleFormSubmit(e){
        e.preventDefault()


        var formData = {
            name: nameElm.value,
            age: ageElm.value,
            number:numberElm.value,
        }



        fetch(`http://localhost:5000/api/v1/animals/${id}`, {
            method: "PUT",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(formData)
        }).then(response => response.json()).then(response =>{
            console.log(response)
            alert ("submit completed")

        })
    }



</script>


</body>
</html>
