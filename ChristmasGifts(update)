</body>
<script>
  var nameElm = document.getElementById("name")
  var priceElm = document.getElementById("price")
  var numberElm = document.getElementById("number")

  document.addEventListener("DOMContentLoaded", function(){
    fetch('http://localhost:5000/api/v1/ChristmasGifts/${id}', {
      method: "GET"
    }).then(response => response.json()).then(response => {
      console.log(response)
      nameElm.value = response.result.name
      priceElm.value = response.result.price
      numberElm.value = response.result.number

    })
  });


  function handleFormSubmit(e){
    e.preventDefault()


    var formData = {
      name: nameElm.value,
      price: priceElm.value,
      number:numberElm.value,
    }



    fetch(`http://localhost:5000/api/v1/ChristmasGifts/${id}`, {
      method: "PUT",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify(formData)
    }).then(response => response.json()).then(response =>{
      console.log(response)
      alert ("submit completed")

    })
  }



</script>



</body>
