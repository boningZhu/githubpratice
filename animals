  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
<div class="container mt-5">
  <h1>Update animals</h1>
  <form onsubmit="handleFormSubmit(event)">
    <h1>animals form</h1>
    <div class="mb-3">
      <label for="name"  class="form-label">name</label>
      <input
              type="text"
              class="form-control"
              name="animals"
              id="name"
      >
    </div>
    <div class="mb-3">
      <label for="age"  class="from-label">age</label>
      <input
              type="text"
              class="form-control"
              name="animals"
              id="age"
      >
    </div>
    <div  class="mb-3">
      <label for="number"  class="from-label">number</label>
      <input
             type="text"
             class="form-control"
             name="animals"
             id="number"
      >
    </div>
    <button type="submit" class="btn btn-primary animals">Submit</button>
  </form>
  <script>

    function handleFormSubmit(e){
      e.preventDefault()
      var nameInput = document.getElementById ("name")
      var ageInput = document.getElementById ("age")
      var numberInput = document.getElementById("number")

      console.log(nameInput.value)
      console.log(ageInput.value)
      console.log(numberInput.value)



      var formData = {
        name : nameInput.value,
        age: ageInput.value,
        number:numberInput.value,
      }



      fetch(`http://localhost:5000/api/v1/animals`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify(formData)
      }).then(response => response.json()).then(response =>{
        console.log(response)
        alert ("submit completed")

      })
    }


  </script>


</body>
