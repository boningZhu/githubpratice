<div class="container mt-5">
    <table class="table">
        <thead>
        <tr>
            <td>label</td>
            <td>priceText</td>
            <td>delete</td>
        </tr>
        </thead>
        <tbody id="productList">
        </tbody>

    </table>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        fetch('http://localhost:5000/api/v1/products', {
            method: "GET"
        }).then(response => response.json()).then(response => {
            console.log(response)
            var listElm = document.getElementById("productList")
            var tbodyStr = ""
            for (var i = 0; i < response.result.length; i++) {
                var item = response.result[i]
                tbodyStr = tbodyStr + `<tr>
          <td><a href="./Update.html?id=${item.id}">${item.id}</a></td>
          <td>${item.label} </td>
          <td>${item.priceText}</td>
          <td><button class="btn btn-danger" onclick="handleDelete(${item.id})">Delete</button></td>
        </tr>`
            }
            console.log(tbodyStr)
            listElm.innerHTML = tbodyStr
        })
    });

    function handleDelete(id) {
        if (confirm("are you sure?")) {
            fetch(`http://localhost:5000/api/v1/products/${id}`,{
                method: 'DELETE'
            }).then(response => response.json()).then(response => {
                if (response.result) {
                    alert("deleted")
                    //window.location.reload()
                }
            })
        }
    }

</script>

</body>
